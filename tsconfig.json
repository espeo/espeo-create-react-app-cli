{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2018",
    "baseUrl": "src",
    "removeComments": true,
    "esModuleInterop": true,
    "typeRoots": ["node_modules/@types"],
    "lib": ["esnext"],
    "module": "commonjs",
    "outDir": "dist",
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts"]
}
